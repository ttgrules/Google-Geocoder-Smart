{
  "branches": ["master"],
  "tagFormat": "v${version}",
  "plugins": [
    [
      "@semantic-release/exec",
      {
        "analyzeCommitsCmd": "node scripts/release/analyze-pr-titles.mjs",
        "generateNotesCmd": "node scripts/release/generate-pr-release-notes.mjs",
        "prepareCmd": "node scripts/release/update-perl-version.mjs ${nextRelease.version} && perl Makefile.PL && make dist"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["lib/Google/GeoCoder/Smart.pm"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@saithodev/semantic-release-gitea",
      {
        "assets": [
          {
            "path": "Google-GeoCoder-Smart-${nextRelease.version}.tar.gz",
            "name": "Google-GeoCoder-Smart-${nextRelease.version}.tar.gz"
          }
        ]
      }
    ]
  ]
}
